<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingRight="10dip"
    android:paddingLeft="10dip"
    android:paddingTop="5dip"
    android:paddingBottom="5dip" >

    <TextView
        android:id="@+id/detalle_item_valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dip"
        android:layout_alignParentLeft="true"
        android:text="Rihanna Love the way lie"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/detalle_item_descripcion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detalle_item_valor"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Just gona stand there and ..."
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/detalle_item_encuentro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detalle_item_descripcion"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Just gona stand there and ..."/>

    <TextView
        android:id="@+id/detalle_item_estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/detalle_item_valor"
        android:gravity="right"
        android:text="5:45"
        android:layout_marginRight="5dip"
        android:textSize="12dip"
        android:textColor="@color/subtitle"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/detalle_item_codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/detalle_item_estado"
        android:gravity="right"
        android:text="5:45"
        android:layout_marginRight="5dip"
        android:textSize="10dip"
        android:textColor="@color/subtitle"/>

</RelativeLayout>