<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dip" >

        <!-- Nombre-->
        <TextView
            android:id="@+id/ticket_item_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ticket NÂ° 101010"
            android:textColor="#040404"
            android:typeface="sans"
            android:textSize="15dip"
            android:textStyle="bold"/>

        <!-- Ganancia -->
        <TextView
            android:id="@+id/ticket_item_ganancia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ticket_item_nombre"
            android:textColor="#343434"
            android:textSize="12dip"
            android:layout_marginTop="1dip"
            android:text="Ganancia"
            android:textStyle="bold"/>

        <!-- Inversion -->
        <TextView
            android:id="@+id/ticket_item_inversion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ticket_item_ganancia"
            android:textColor="#343434"
            android:textSize="10dip"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dip"
            android:text="Ganado"
            />

        <!-- Estado -->
        <LinearLayout
            android:id="@+id/ticket_item_estado_bar"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/ticket_item_nombre"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:paddingBottom="3dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:background="@color/colorAccent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ticket_item_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:45"
                android:textSize="11dip"
                android:textColor="#ffffff"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Fecha -->
        <TextView
            android:id="@+id/ticket_item_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:text="5:45"
            android:layout_marginRight="5dip"
            android:textSize="10dip"
            android:textColor="@color/subtitle"
            android:textStyle="bold"/>

    </RelativeLayout>

</LinearLayout>